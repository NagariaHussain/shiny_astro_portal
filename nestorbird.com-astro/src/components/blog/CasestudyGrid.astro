---
import Item from '~/components/blog/CaseGridItem.astro';
import type { Post } from '~/types';
import * as Icon from '@astropub/icons'

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---
<div class="swiper-container grid-wrap case-cont">
  <div class="swiper-wrapper flex flex-nowrap gap-10 row-gap-5 -mb-6">
      {posts.map((casestudy) => <Item casestudy={casestudy} />)}           
  </div>
  <div class="grid-pagination">
      <div class="swiper-button-next"><Icon.ArrowRight height="20" width="60"/></div>
      <div class="swiper-button-prev"><Icon.ArrowLeft height="20" width="60" /></div>
  </div>
</div>

 <!-- Initialize Swiper -->
<script>
  new Swiper('.swiper-container.case-cont', {
  slidesPerView: 3,
  initialSlide: 3, 
  spaceBetween: 10,
  slidesPerGroupSkip: 1, 
  autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
  loop: true,  
  roundLengths: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
        
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>