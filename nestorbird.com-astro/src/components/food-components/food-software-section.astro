---
interface Item {
  name: string;
  value: string;
  content?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  content?: string;
  highlight?: string;
  items?: Array<Item>;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  content = await Astro.slots.render('content'),
  highlight,
  items = [],
} = Astro.props;
---
<section class="relative food-software-bg"> 
<div class=" relative max-w-7xl mx-auto md:flex md:flex-row-reverse md:gap-16 pt-10  ">
  {
    (title || subtitle || highlight) && (
      <div class="mt-10 md:mt-0 p-12 pt-4 md:basis-1/2 ml-36">
        {highlight && (
          <p class="text-base text-primary font-semibold tracking-wide uppercase ">
            {highlight}
          </p>
        )}
        {title && (
          <h2
            class="max-w-lg mb-2 pt-4 text-3xl business-heading inter"
            set:html={title}
          />
        )}
        {subtitle && (
          <p class=" text-l pb-6 case-study-heading" set:html={subtitle} />
        )}
        {content && (
          <p class=" text-l pb-8" style="color: #2F3134;" set:html={content} />
        )}
        {content && (
          <a class="business-btn" href="/" style="color: #FFFFFF;" set:html={"Learn More"} />
        )}
      </div>
    )
  }
</div>
</section>