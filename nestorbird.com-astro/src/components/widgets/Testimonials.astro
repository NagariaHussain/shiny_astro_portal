---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';
// src/pages/swiper.astro
import MyTestimonials from '~/components/MyTestimonials.astro';

import 'swiper/css';
interface Item {
  title: string;
  description?: string;
  icon?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  highlight?: string;
  content?: string;
  items?: Array<Item>;
  image?: string | any; // TODO: find HTMLElementProps
 
  isAfterContent?: boolean;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  highlight,
  content = await Astro.slots.render('content'),
  items = [],
  image = await Astro.slots.render('image'),
   
  isAfterContent = false,
} = Astro.props;
---

<section class:list={[{ 'pt-0 md:pt-0': isAfterContent }, ' dark:bg-white py-16 md:py-8']}>
  <div class="max-w-xl sm:mx-auto lg:max-w-2xl">
    {
      (title || subtitle || highlight) && (
        <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
          {highlight && (
            <p
              class="text-base text-primary dark:text-blue-200 font-semibold tracking-wide uppercase"
              set:html={highlight}
            />
          )}
          {title && (
            <h2
              class="text-5xl md:text-5xl font-bold tracking-tighter mb-4 text-black font-heading"
              set:html={title}
            />
          )}

          {subtitle && (
            <p class="max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400" set:html={subtitle} />
          )}
        </div>
      )
    }
  </div>
  <div class="mb-12 md:mx-auto text-center max-w-4xl">
    <div class={` md:gap-16`}>
    <div aria-hidden="true" class="m-10 md:mt-0 ">
        {
          image && (
            <div class="relative m-auto max-w-fit">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Picture
                  class="mx-auto w-full"
                  width={67}
                  height={56}
                  widths={[67, 67]}
                  sizes="(max-width: 67px) 100vw, 56px"
                  aspectRatio="67:56"
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
      <div class=" max-w-2xl sm:mx-auto lg:max-w-2xl self-center">
        {content && <div class="mb-12 text-lg dark:text-slate-400" set:html={content} />}

        {
          items && (
            <div class="space-y-8">
              {items.map(({ title: title2, description, icon }) => (
                <div class="flex">
                  <div class="flex-shrink-0">
                    <div class="flex h-7 w-7 items-center justify-center rounded-full bg-primary text-gray-50">
                      <Icon name={icon ? icon : 'tabler:check'} class="w-5 h-5" />
                    </div>
                  </div>
                  <div class="ml-4">
                    {title2 && <h3 class="text-lg font-medium leading-6 dark:text-white">{title2}</h3>}
                    {description && <p class="mt-2 text-muted dark:text-slate-400" set:html={description} />}
                  </div>
                </div>
              ))}
            </div>
          )
        }
      </div>
      <div class=" max-w-xl sm:mx-auto lg:max-w-xl self-center">
        <MyTestimonials />
      </div>
        
    </div>
  </div>
</section>
